global:
  scrape_interval: '15s'
  external_labels:
    monitor: '{{ prometheus_monitor_name }}'

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: '5s'
    static_configs:
      - targets:
        - 'localhost:9090'

{% for job in prometheus_scrape_configs %}
  - job_name: "{{ job.name }}"
    static_configs:
      - targets:
{% for target in job.targets %}
        - "{{ target }}"
{% endfor %}
    metrics_path: "{{ job.metrics_path }}"
    scheme: "https"

{% endfor %}

