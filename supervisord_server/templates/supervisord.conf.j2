[unix_http_server]
file=/var/run/supervisor/supervisor.sock ; supervisorctl management socket

[supervisorctl]
serverurl=unix:///var/run/supervisor/supervisor.sock ; supervisorctl management socket

[rpcinterface:supervisor]
supervisor.rpcinterface_factory = supervisor.rpcinterface:make_main_rpcinterface

[supervisord]
logfile=/var/log/supervisor-activity.log  ; syslog not supported here for now, see https://github.com/Supervisor/supervisor/pull/289
loglevel=info
pidfile=/var/run/supervisor/supervisord.pid
nodaemon=false
minfds=1024
minprocs=200

; fcgi-program definitions below here

{% for program in supervisord_fcgi_programs | default([]) %}
; {{ program.comment }}
[program:{{ program.name }}]
command={{ program.command }}
socket={{ program.socket }}
process_name=%(program_name)s_%(process_num)02d
user={{ program.user }}
redirect_stderr=true
stdout_logfile=syslog
stderr_logfile=syslog
numprocs=5

{% endfor %}

