# PROVIDE: metabase
# REQUIRE: LOGIN
# KEYWORD: shutdown

#
# Add the following line to /etc/rc.conf to enable `metabase`:
#
# metabase_enable="YES"

. /etc/rc.subr
name=metabase

rcvar=metabase_enable
load_rc_config ${name}

: ${metabase_enable:=NO}
: ${metabase_user:="metabase"}
: ${metabase_group:="metabase"}
: ${metabase_javaflags:=""}

pidfile="/var/run/metabase/${name}.pid"
procname=%%JAVA%%
command="/usr/sbin/daemon"
command_args="-f -p ${pidfile} %%JAVA%% ${metabase_javaflags} -jar lib/metabase.jar"
start_precmd=start_precmd

start_precmd()
{
	if [ ! -e /var/run/metabase ] ; then
		install -d -o %%USERS%% -g %%GROUPS%% /var/run/metabase;
	fi
}

run_rc_command "$1"

